            "color": "#272822",
            "backgroundColor": "#ffffff",
            "overviewRulerColor": "#ffffff",
            "fontWeight": "500"
        }
    ],

    //enable julia multithreading (on windows)
    "terminal.integrated.env.windows": {
        "JULIA_NUM_THREADS": "16",
    },

    //highlight julia types with their own color
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
            "scope": "support.type.julia",
            "settings": {"foreground": "#FD971F"}
            }
        ]
    },

    //assorted useful settings
    "editor.acceptSuggestionOnEnter": "off",
    "editor.suggest.localityBonus": true,
    "terminal.integrated.rightClickBehavior": "selectWord",
    "workbench.panel.defaultLocation": "right",
    "editor.tabCompletion": "on",
    "window.restoreWindows": "none",

    //useless but awesome cosmetic settings
    "workbench.colorTheme": "Monokai",
    "workbench.iconTheme": "material-icon-theme",
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "terminal.integrated.fontFamily": "Fira Code",
    "editor.fontWeight": "300",
    "window.titleBarStyle": "custom",
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "editor.minimap.maxColumn": 180,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "phase"
}