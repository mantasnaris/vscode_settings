{
    "todo-tree.highlights.defaultHighlight": {
        "icon": "issue-opened",
        "type": "tag-and-comment",
        "foreground": "#272822",
        "background": "white",
        "rulerColour": "white",
        "iconColour": "white",
        "fontWeight": "500"
    },
    
    "todo-tree.general.tags": [
        "TODO:",
        "NOTE:",
        "CITE:",
        "TEST:",
        "DOC:",
        "DONE:",
        "YO:",
        "FIX:",
        "FUTURE:",
        "MAYBE:",
        "YEET:"
    ],

    "todo-tree.highlights.customHighlight": {
        "NOTE:": {
            "background": "#C401D7",
            "rulerColour": "#C401D7",
            "iconColour": "#C401D7",
            "icon": "info"
        },
        "CITE:": {
            "background": "#00DB8E",
            "rulerColour": "#00DB8E",
            "iconColour": "#00DB8E"
        },
        "TEST:": {
            "background": "#00DB8E",
            "rulerColour": "#00DB8E",
            "iconColour": "#00DB8E"
        },
        "DOC:": {
            "background": "#00DB8E",
            "rulerColour": "#00DB8E",
            "iconColour": "#00DB8E"
        },
        "DONE:": {
            "background": "#56ADBC",
            "rulerColour": "#56ADBC",
            "iconColour": "#56ADBC",
            "icon": "check"
        },
        "TODO:": {
            "background": "#F6D42A",
            "rulerColour": "#F6D42A",
            "iconColour": "#F6D42A",
            "icon": "tasklist"
        },
        "YO:": {
            "background": "#FD971F",
            "rulerColour": "#FD971F",
            "iconColour": "#FD971F"
        },
        "FIX:": {
            "background": "#FF0000",
            "rulerColour": "#FF0000",
            "iconColour": "#FF0000",
            "icon": "x"
        },
        "FUTURE:": {
            "background": "#F92672",
            "rulerColour": "#F92672",
            "iconColour": "#F92672",
            "icon": "versions"
        },
        "MAYBE:": {
            "background": "#F92672",
            "rulerColour": "#F92672",
            "iconColour": "#F92672"
        }
    },

    //enable julia multithreading (on windows)
    "terminal.integrated.env.windows": {
        "JULIA_NUM_THREADS": "16",
    },

    //highlight julia types with their own color
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
            "scope": "support.type.julia",
            "settings": {"foreground": "#FD971F"}
            }
        ]
    },

    //assorted useful settings
    "editor.acceptSuggestionOnEnter": "off",
    "editor.suggest.localityBonus": true,
    "terminal.integrated.rightClickBehavior": "selectWord",
    "workbench.panel.defaultLocation": "right",
    "editor.tabCompletion": "on",
    "window.restoreWindows": "none",

    //useless but awesome cosmetic settings
    "workbench.colorTheme": "Monokai",
    "workbench.iconTheme": "material-icon-theme",
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "terminal.integrated.fontFamily": "Fira Code",
    "editor.fontWeight": "300",
    "window.titleBarStyle": "custom",
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "editor.minimap.maxColumn": 180,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "phase"
}